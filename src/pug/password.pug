<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="utf-8")
		title Личный кабинет
		include inc/head.pug
		include inc/css.pug
	body.inner.loading
		include inc/header.pug
		
		main#content
			.inner-content__cont
				.wrapper
					.title-block
						.title-block__crumbs
							ul.bread-crumbs
								li.bread-crumbs__link(itemscope="" itemtype="http://data-vocabulary.org/Breadcrumb")
									a(href="#" title="Главная" itemprop="url")
										span(itemprop="title") Главная
								li.bread-crumbs__this Личный кабинет
						.title-block__title
							h1 Личный кабинет
					.inner-content
						.lc
							.lc__btns
								.lc__btns-main
									each btn, i in ["Мой кабинет", "Мои заказы", "Сменить пароль", ]
										if (i == 2)
											a.gray-btn.active(href="#")=btn
										else
											a.gray-btn(href="#")=btn
								.lc__btns-exit
									a.bordered-btn(href="#") Выход
							.lc__content
								.lc-password
									form(action="#")
										.forms-wrap.forms-wrap--column
											.forms__input-cont
												input.forms__input(required="" type="password")
												label.forms__label Новый пароль
											.forms__input-cont
												input.forms__input(required="" type="password")
												label.forms__label Подтверждение пароля
										.lc-edit__submit
											input.arrow-btn(type="submit" value="Созранить")
		include inc/footer.pug
		include inc/scripts.pug