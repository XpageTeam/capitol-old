									button.slick-prev.slick-arrow
									.swiper-list
										.swiper-wrapper
											- for (let i = 0; i < 2; i++)
												each person, j in [{name: "Олеся Курочкина", job: "Менеджер по продажам", skype: "sntx_kurochkina"}, {name: "Егор Олексюк", job: "Оператор торгового зала"}, {name: "Евгений Бурлака", job: "Менеджер отдела продаж"}, {name: "Ирина Акимова", job: "Оператор торгового зала"}, ]
