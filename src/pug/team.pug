														.person
															figure.person__img
																img(src="img/photos/pers-"+j+".jpg")
															.person__name=person.name
															.person__job
																span.job=person.job
															address.person__phone
																a(href="tel:+7 (351) 729-88-58") +7 (351) 729-88-58
															if (person.skype)
																address.person__skype
																	a(href="#")=person.skype
